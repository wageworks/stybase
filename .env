# ---------------- Flask ----------------
FLASK_ENV=production
SECRET_KEY=your_super_secret_key_here
SESSION_COOKIE_NAME=stybase_session
BASE_URL=http://localhost:5000
LOGIN_REDIRECT_URL=/dashboard
REGISTER_REDIRECT_URL=/dashboard

# ---------------- Database ----------------
stybase_DB=stybase.db

# ---------------- Email (Optional) ----------------
EMAIL_ENABLED=False
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_USE_TLS=True

# ---------------- OAuth / App ----------------
OAUTH_TOKEN_EXPIRY=3600
OAUTH_REFRESH_EXPIRY=86400
OAUTH_SCOPES=profile,email,openid

# ---------------- Admin ----------------
ADMIN_USERNAME=admin
ADMIN_PASSWORD=super_secure_admin_password

# ---------------- Other ----------------
DEBUG=True
